public class RamodProfile {
    private String name = "Ramod";
    private String district = "Rajkot";
    private String taluka = "Kotda Sangani";

    public void displayVillageInfo() {
        System.out.println("Village Identity Card");
        System.out.println("---------------------");
        System.out.println("Name:     " + name);
        System.out.println("Taluka:   " + taluka);
        System.out.println("District: " + district);
    }

    public static void main(String[] args) {
        RamodProfile village = new RamodProfile();
        village.displayVillageInfo();
    }
}
